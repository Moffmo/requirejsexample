{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "jsx": "react",
        "outDir": "./wwwroot/js/generated"
    },
    "include": [
        "./Scripts/**/*",
        "./node_modules/@types/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./bower_components"
    ]
}